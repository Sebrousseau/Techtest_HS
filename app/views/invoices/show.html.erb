<div class="container">
  <h1 class='text-center'>Facture numéro <%= @invoice.id %></h1>
  <hr>
  <h3>Client: <%= @invoice.customer %></h3>
  <hr>
  <ul>
  <% @invoice.order_products.each do |op| %>
  <li><%= "#{op.quantity} #{op.product.name.pluralize} - #{op.total_price_ht} Euros (HT) - TVA= #{op.product.tva * 100}%"%></li>
  <% end %>
  </ul>
  <hr>
  <p><%= "Sous TOTAL = #{@invoice.total_ht} Euros (HT) " if @invoice.apply_tva %></p>
  <p><%= "TOTAL = #{@invoice.total_ttc} Euros (TTC) " if @invoice.apply_tva %></p>
  <p><%= "TOTAL Hors Taxe = #{@invoice.total_ht} Euros (HT) " unless @invoice.apply_tva %></p>
  <hr>
  <h4 class='text-center'><%= "Réglée le #{@invoice.payment_date}" %></h4>
  <hr>
  <%= link_to 'Retour aux factures', invoices_path, class: 'btn btn-primary' %>
</div>
