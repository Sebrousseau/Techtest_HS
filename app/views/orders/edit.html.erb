<div class="container">
  <h2 class="text-center">Modifier ma commande<h2>
<hr>

  <%= simple_form_for(@order) do |f| %>
     <div class="form-inputs">
      <%= f.input :customer,
                  label: "Nom du client",
                  input_html: { autocomplete: "customer" }%>
    </div>
    <hr>
    <div class="cards-product-container">
      <% @products.each do |product| %>
        <%= render("shared/product_card", product: product ) %>
      <% end %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Modifier", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
