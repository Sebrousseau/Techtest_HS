
<div class="container">
  <h2 class="text-center">Modifier ma commande<h2>
<hr>
  <form method="post" action=<%="/orders/#{@order.id}"%>>
  <input type="hidden" name="_method" value="PATCH">

  <label for="customer">Customer name</label>
  <input type="text" name="customer" id="customer" value="<%=@order.customer%>">
  <hr>
  <div class="cards-product-container">
      <% @products.each do |product| %>
        <%= render("shared/product_card", product: product ) %>

      <% end %>
  </div>
  <hr>
  <div>
    <input type="checkbox" id="tva" name="apply_tva" value="true">
    <label for="tva">Appliquer la TVA?</label>
  </div>
  <hr>
  <input type="submit" name="Buy" class='btn btn-primary'>
</form>
</div>
